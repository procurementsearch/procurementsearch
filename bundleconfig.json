[
  {
    "outputFileName": "wwwroot/css/site.min.css",
    // An array of relative input file paths. Globbing patterns supported
    "inputFiles": [
      "wwwroot/css/fonts.css",
      "wwwroot/css/pure-min.css",
      "wwwroot/css/grids-responsive-min.css",
      "wwwroot/css/styles.css",
      "wwwroot/lib/Croppie/croppie.css",
      "wwwroot/lib/datetimepicker/jquery.datetimepicker.css"
    ]
  },
  {
    "outputFileName": "wwwroot/js/site.min.js",
    "inputFiles": [
      "wwwroot/lib/jquery/dist/jquery.js",
      "wwwroot/lib/parsleyjs/dist/parsley.js",
      "wwwroot/lib/Croppie/croppie.js",
      "wwwroot/lib/php-date-formatter/js/php-date-formatter.js",
      "wwwroot/lib/datetimepicker/jquery.datetimepicker.js",
      "wwwroot/js/site.js"
    ],
    // Optionally specify minification options
    "minify": {
      "enabled": true,
      "renameLocals": true
    },
    // Optionally generate .map file
    "sourceMap": false
  }
]
