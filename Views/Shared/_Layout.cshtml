<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Find government contracting
                                  opportunities fast!">

    <title>@ViewBag.extraTitle - @Defines.LocationSettings.siteTitle</title>

    <link rel="alternate" type="application/rss+xml" title="RSS"
          href="@Defines.LocationSettings.rssUrl/rss">
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">

    <environment names="Development">
        <link rel="stylesheet" href="~/css/fonts.css">
        <link rel="stylesheet" href="~/css/pure-min.css">
        <link rel="stylesheet" href="~/css/grids-responsive-min.css">
        <link rel="stylesheet" href="@Defines.LocationSettings.cssUrl">
    </environment>

    <environment names="Staging,Production">
        <link rel="stylesheet" href="@Defines.LocationSettings.cssMicroUrl" asp-append-version="true" />
    </environment>

    @if (Defines.LocationSettings.gaGuid != "")
    {
    <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

    ga('create', '@Defines.LocationSettings.gaGuid', 'auto');
    ga('send', 'pageview');

    </script>
    }

</head>
<body>

    <div id="layout">

        <!-- for sticky footer -->
        <a href="#menu" id="menuLink" class="menu-link">
            <!-- Hamburger icon -->
            <span></span>
        </a>

        <div id="menu">
            <div class="pure-menu">
                <a class="pure-menu-heading" href="#">Company</a>
                <ul class="pure-menu-list">
                    @Html.Partial("Pages-nav")
                </ul>
            </div>
        </div>


        <!-- <div class="header small-hide">
            <div class="pure-menu pure-menu-horizontal">
                <a class="pure-menu-heading rss" title="RSS Feed for all new contracts" href="/rss"><img alt="RSS Icon" src="/images/rss-icon.png"></a>
                <ul class="pure-menu-list" role="navigation">
                    @Html.Partial("Pages-nav")
                </ul>
            </div>
        </div> -->


        <div id="main" class="my_content">
            <div class="header"></div>
            <div class="content"></div>
            @RenderBody()
        </div>


        <footer class="footer pure-g">
            @Html.Partial("Footer-three-columns")
        </footer>

    </div>


    <script src="js/ui.js"></script>

</body>
</html>
