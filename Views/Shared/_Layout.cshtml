<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Find government contracting
                                  opportunities fast!">

    <title>@ViewBag.extraTitle - @Defines.LocationSettings.siteTitle</title>

    <link rel="alternate" type="application/rss+xml" title="RSS"
          href="@Defines.LocationSettings.rssUrl/rss">
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">

    <environment names="Development">
        <link rel="stylesheet" href="~/css/fonts.css">
        <link rel="stylesheet" href="~/css/pure-min.css">
        <link rel="stylesheet" href="~/css/grids-responsive-min.css">
        <link rel="stylesheet" href="~/css/styles.css">
        <link rel="stylesheet" href="~/css/search.css">
        <link rel="stylesheet" href="~/css/detail.css">
        <link rel="stylesheet" href="~/css/hamburger-menu.css">
        <link rel="stylesheet" href="~/css/account.css">
        <link rel="stylesheet" href="~/css/progress-bar.css">
        <link rel="stylesheet" href="~/css/listing-breadcrumbs.css">
        <link rel="stylesheet" href="~/css/mobile.css">
        <link rel="stylesheet" href="~/lib/slick-carousel/slick/slick.css">
        <link rel="stylesheet" href="~/lib/slick-carousel/slick/slick-theme.css">

        <script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
        <script type="text/javascript" src="~/lib/slick-carousel/slick/slick.js"></script>
        <script type="text/javascript" src="~/lib/Tocca.js/Tocca.js"></script>
        <script type="text/javascript" src="~/js/site.js"></script>
        <script type="text/javascript" src="~/js/ui.js"></script>
    </environment>

    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/css/site.micro.min.css" asp-append-version="true" />
        <script type="text/javascript" src="~/js/site.micro.min.js"></script>
    </environment>

    @if (Defines.LocationSettings.gaGuid != "")
    {
    <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

    ga('create', '@Defines.LocationSettings.gaGuid', 'auto');
    ga('send', 'pageview');

    </script>
    }

    <script type="text/javascript"
            src="http://w.sharethis.com/button/buttons.js"></script>

</head>
<body>

    <div id="layout">

        <!-- for sticky footer -->
        <a href="#menu" id="menuLink" class="menu-link">
            <!-- Hamburger icon -->
            <span></span>
        </a>

        <div id="menu">
            <div class="pure-menu">
                <a class="pure-menu-heading" href="#">Login</a>
                <ul class="pure-menu-list">
                    @Html.Partial("Pages-login")
                </ul>
                <a class="pure-menu-heading" href="#">Menu</a>
                <ul class="pure-menu-list">
                    @Html.Partial("Pages-menu")
                </ul>
                <a class="pure-menu-heading" href="#">Social Media</a>
                <ul class="pure-menu-list">
                    @Html.Partial("Pages-social-media")
                </ul>
                <a class="pure-menu-heading" style="text-transform: none;" href="#">Procurement Search, LLC</a>
                <ul class="pure-menu-list">
                    <li class="pure-menu-item"><a href="#" class="pure-menu-link">(503) 395-5303</a></li>
                    <li class="pure-menu-item"><a href="#" class="pure-menu-link">help @@ procurementsearch.com</a></li>
                </ul>
            </div>
        </div>

        <div id="main" class="my_content">
            <!-- <div class="content"></div> -->
            @RenderBody()
        </div>

    </div>

</body>
</html>
