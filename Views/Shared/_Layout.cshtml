        <div class="header small-hide">
            <div class="pure-menu pure-menu-horizontal">
                <a class="pure-menu-heading rss" href="/rss"><img src="/images/rss-icon.png"></a>
                <ul class="pure-menu-list">
                    @Html.Partial("Pages-nav")
                </ul>
            </div>
        </div>
	<div style="clear: both;"></div>

        @RenderBody()

        <div class="push"></div>
    </div>


    <div class="footer pure-g">

        <div class="pure-u-1 pure-u-md-1-3 l2-box">
            <b>ProcurementSearch.com is your one-stop shop for
