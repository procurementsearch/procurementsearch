<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Find government contracting
                                  opportunities fast!">

    <meta name="google-site-verification" content="PZT9CYSJ2kXSZAkzirRPByyfgFcMGAtSif8Lyi6zN0k" />
    <meta property="og:title" content="Procurement Search">
    <meta property="og:type" content="website">
    <!-- <meta property="og:image" content="http://procurementsearch.com/images/new%20logo%20in%20circle.png"> -->
    <meta property="og:url" content="http://ProcurementSearch.com/">
    <meta property="og:site_name" content="Procurement Search">
    <meta property="og:description" content="ProcurementSearch.com is your one-stop shop for discovering local government contracting opportunities.">

    <title>@ViewBag.extraTitle - @Defines.LocationSettings.siteTitle</title>

    <link rel="alternate" type="application/rss+xml" title="RSS"
          href="@Defines.LocationSettings.rssUrl/rss">
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">

    <environment names="Development">
        <link rel="stylesheet" href="~/css/fonts.css">
        <link rel="stylesheet" href="~/node_modules/purecss/build/pure-min.css">
        <link rel="stylesheet" href="~/node_modules/purecss/build/grids-responsive-min.css">
        <link rel="stylesheet" href="~/css/home.css">

        <!-- <link rel="stylesheet" href="~/css/styles.css">
        <link rel="stylesheet" href="~/css/search.css">
        <link rel="stylesheet" href="~/css/detail.css">
        <link rel="stylesheet" href="~/css/hamburger-menu.css">
        <link rel="stylesheet" href="~/css/agency.css">
        <link rel="stylesheet" href="~/css/progress-bar.css">
        <link rel="stylesheet" href="~/css/listing-breadcrumbs.css">
        <link rel="stylesheet" href="~/css/mobile.css"> -->
        <link rel="stylesheet" href="~/node_modules/slick-carousel/slick/slick.css">
        <link rel="stylesheet" href="~/node_modules/slick-carousel/slick/slick-theme.css">

        <script type="text/javascript" src="~/node_modules/jquery/dist/jquery.js"></script>
        <script type="text/javascript" src="~/node_modules/slick-carousel/slick/slick.js"></script>
        <script type="text/javascript" src="~/js/site.js"></script>
        <script type="text/javascript" src="~/js/ui.js"></script>
    </environment>

    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/css/site.micro.min.css" asp-append-version="true" />
        <script type="text/javascript" src="~/js/site.micro.min.js"></script>
    </environment>

    @if (Defines.LocationSettings.gaGuid != "")
    {
    <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

    ga('create', '@Defines.LocationSettings.gaGuid', 'auto');
    ga('send', 'pageview');

    </script>
    }

    <script type="text/javascript"
            src="http://w.sharethis.com/button/buttons.js"></script>

</head>
<body>







<div id="layout" class="pure-g">
    <div class="sidebar pure-u-1 pure-u-md-1-4">
        <div class="header">
            <img src="/images/logo.png" class="pure-img">
            <h1 class="brand-title">Procurement Search</h1>
            <h2 class="brand-tagline">@Html.Raw(Defines.LocationSettings.homeTitle)</h2>

            <nav class="nav">
                <ul class="nav-list">
                    <li class="nav-item">
                        <a class="pure-button" href="http://purecss.io">Pure</a>
                    </li>
                    <li class="nav-item">
                        <a class="pure-button" href="http://yuilibrary.com">YUI Library</a>
                    </li>

                    <a class="pure-menu-heading" href="#">Login</a>
                    <ul class="pure-menu-list">
                        @Html.Partial("Pages-login")
                    </ul>
                    <a class="pure-menu-heading" href="#">Menu</a>
                    <ul class="pure-menu-list">
                        @Html.Partial("Pages-menu")
                    </ul>
                    <a class="pure-menu-heading" href="#">Social Media</a>
                    <ul class="pure-menu-list">
                        @Html.Partial("Pages-social-media")
                    </ul>


                </ul>
            </nav>
        </div>
    </div>

    <div class="content pure-u-1 pure-u-md-3-4">
        <div>
            <!-- A wrapper for all the blog posts -->
            @RenderBody()


            <div class="footer">
                <div class="pure-menu pure-menu-horizontal">
                    <ul>
                        <li class="pure-menu-item"><a href="#" class="pure-menu-link">An Equity Hub Offering</a></li>
                        <li class="pure-menu-item"><a href="#" class="pure-menu-link">(503) 395-5303</a></li>
                        <li class="pure-menu-item"><a href="#" class="pure-menu-link">help @@ procurementsearch.com</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>




</body>
</html>
