<div class="pure-g">
    <div class="pure-u-1 pure-u-md-1-4 small-hide"></div>
    <div class="pure-u-1 pure-u-md-1-2 content-box">
        <div id="main-logo-container"><img src="@Defines.LocationSettings.logoUrl" class="pure-img" style="margin-left: auto; margin-right: auto;"></div>
        <div class="head">
            @Html.Raw(Defines.LocationSettings.homeTitle)
        </div>
    </div>
    <div class="pure-u-1 pure-u-md-1-4 small-hide"></div>
</div>

<div class="pure-g">
    <div class="pure-u-1 pure-u-md-7-24 small-hide"></div>
    <div class="pure-u-1 pure-u-md-10-24 content-box l-box" role="main">
        <form method="get" action="/search" role="search">
            <input type="text" name="kw" placeholder="Search...">
            <button type="submit" class="pure-button">@Html.Raw(Defines.LocationSettings.homeButtonText)</button>
        </form>
        <p class="tip">
            Example: landscape architecture<br>
        </p>
        @Html.Raw(Defines.LocationSettings.homeGreetingText)
    </div>
</div>

<div class="pure-g">
    <div class="pure-u-1 l-box">
        <div class="footnote">

            <div class="pages large-hide">
                <div class="head">Pages</div>
                <ul role="navigation">
                    @Html.Partial("Pages-menu")
                </ul>
            </div>

            <p class="tip">
                Got questions?  Oh yes you do.
            </p>
        </div>
    </div>
</div>
